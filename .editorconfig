# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{html,scss,css,js,json,php}]
trim_trailing_whitespace = true
insert_final_newline = true

[src/html/*/*.html]
insert_final_newline = false